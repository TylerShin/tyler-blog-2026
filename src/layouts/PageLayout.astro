---
import "@styles/global.css";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Drawer from "@components/Drawer.astro";
import { SITE } from "@consts";
import { DEFAULT_LOCALE, type Locale } from "@lib/i18n";

interface Props {
  title: string;
  description: string;
  lang?: Locale;
}

const { title, description, lang = DEFAULT_LOCALE } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
    {
      import.meta.env.PROD && (
        <>
          <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8641546109035699"
     crossorigin="anonymous"></script>
          <script async src="https://www.googletagmanager.com/gtag/js?id=G-9ZHVDF115D"></script>
          <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-9ZHVDF115D');
          </script>
        </>
      )
    }
  </head>
  <body>
    <Header />
    <Drawer />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
